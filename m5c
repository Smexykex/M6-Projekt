def logIn():
    inputUsername = input("Username: ")
    inputPassword = input("Password: ")
    while not isLoginValid(inputName, inputPassword):
        print("Invalid username or password")
        print("r Try again")
        print("q Quit")
        print()
        newInput = input("Option: ")
        if newInput not in ["r", "q"]:
            print("Invalid choice")
        elif newInput == "q":
            loggedIn = newInput
            break
        else:
            inputUsername = input("Username: ")
            inputPassword = input("Password: ")
    
    loggedIn = inputName        #logga in och visa items
    return loggenIn

startup()
